@using Mvc5.Models.Entity
@model List<tbl_egitimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Eğitim Menüsü</h2>
<a href="/Egitim/YeniEgitim" class="btn btn-info">Yeni Eğitim Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Üniversite</th>
        <th>Fakülte</th>
        <th>Bölüm</th>
        <th>Genel Not Ortalaması</th>
        <th>Tarih</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {


    <tr>
        <td>@item.ID</td>
        <td>@item.Baslik</td>
        <td>@item.AltBaslik1</td>
        <td>@item.AltBaslik2</td>
        <td>@item.GNO</td>
        <td>@item.Tarih</td>
        <td>
            <a href="/Egitim/EgitimGetir/@item.ID" class="btn btn-warning">Düzenle</a>
        </td>
        <td>
            <a href="/Egitim/EgitimSil/@item.ID" class="btn btn-danger">Sil</a>
        </td>
    </tr>
    }
</table>

