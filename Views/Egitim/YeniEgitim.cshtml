@model Mvc5.Models.Entity.tbl_egitimlerim

@{
    ViewBag.Title = "YeniEgitim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Eğitim Ekleme Formu</h2>
<br />
<form method="post">
    @Html.Label("Üniversite Adını Giriniz :")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control",@required="" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new {@style="color:red"})
    <br />
    @Html.Label("Fakülte Adını Giriniz : ")
    @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control",@maxlength="100" })
    @Html.ValidationMessageFor(x => x.AltBaslik1,"",new{@style="color:red"})
    <br />
    @Html.Label("Bölüm Adını Giriniz : ")
    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
    <br />
    @Html.Label("Genel Not Ortalamanızı Giriniz : ")
    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
    <br />
    @Html.Label("Eğitim Gördüğünüz Tarih Aralığını Giriniz : ")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Yeni Eğitim Ekle</button>

</form>

